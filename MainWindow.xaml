                        <Image></Image>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="Вырезать" >
                    <MenuItem.Icon>
                        <Image></Image>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="Удалить" >
                    <MenuItem.Icon>
                        <Image></Image>
                    </MenuItem.Icon>
                </MenuItem>
            </MenuItem>
            <MenuItem Header="Вид" >
                <MenuItem.Icon>
                    <Image></Image>
                </MenuItem.Icon>
            </MenuItem>
        </Menu>
        <ListBox Name="listBox" 
                 Grid.ColumnSpan="2"
                 Grid.Column="0" 
                 Grid.Row="1"
                 HorizontalContentAlignment="Stretch"
                 ItemsSource="{Binding OCTasksList}"
                 ItemTemplate="{StaticResource lbItem}">
            
